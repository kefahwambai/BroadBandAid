{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,   
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true  
  },
  "include": ["./src/**/*"]
}
